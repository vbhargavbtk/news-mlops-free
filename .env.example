# MongoDB Configuration
# Get this from your MongoDB Atlas cluster
MONGO_URI="mongodb+srv://<username>:<password>@<cluster-url>/<db-name>?retryWrites=true&w=majority"

# Render Deploy Hook URL (for CI/CD)
# Get this from your Render service settings
RENDER_DEPLOY_HOOK_URL="https://api.render.com/deploy/srv-xxxxxxxxxxxx"

# Gunicorn settings (optional, defaults are in gunicorn_conf.py)
GUNICORN_PROCESSES=4
GUNICORN_TIMEOUT=120
